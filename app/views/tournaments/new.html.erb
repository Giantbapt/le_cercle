<div class="container col-xs-12 col-md-offset-3 col-md-6">
	<h1>Create your next tournament</h1>
	<br>
	<%= simple_form_for(@tournament) do |f| %>
	  <div class="form-inputs">
	    <%= f.input :name, required: true%>
	    <%= f.input :date, required: true %>
	    <%= f.input :place, input_html: { class: "autocomplete", required: true },required: true %>
	    <%= f.input :price_per_team, required: true %>
	    <%= f.input :description, required: true %>
	    <%= f.input :phone_number, required: true %>
	    <%= f.input :photo%>
	    <%#= f.input :photo_cache, as: :hidden%>
	    <br>
	  </div>

	  <div class="form-actions">
	    <%= f.button :submit, "Post your tournament", class: "btn btn-primary full-width" %>
	  </div>
	<% end %>
</div>